{
  "manifest_version": 3,
  "name": "Notification Catcher",
  "version": "1.0",
  "description": "Captura eventos da p√°gina e os envia para um servidor local.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
